            dropdown.classList.toggle('active');
        }

        window.onclick = function(event) {
            if (!event.target.matches('.user-icon-nav')) {
                const dropdown = document.getElementById('userDropdown');
                if (dropdown.classList.contains('active')) {
                    dropdown.classList.remove('active');
                }
            }
        }

        function showFileName() {
            const input = document.getElementById('resume-file');
            const fileNameDiv = document.getElementById('file-name');
            if (input.files.length > 0) {
                fileNameDiv.textContent = 'âœ“ ' + input.files[0].name;
            }
        }

        function toggleResumeUpload() {
            const existingBox = document.getElementById('existing-resume-box');
            const uploadBox = document.getElementById('upload-resume-box');
            const hiddenInput = document.getElementById('use_existing_resume');
            const fileInput = document.getElementById('resume-file');

            if (existingBox.style.display !== 'none') {
                // Switching to Upload Mode
                existingBox.style.display = 'none';
                uploadBox.style.display = 'block';
                hiddenInput.value = '0'; // Don't use existing
                fileInput.required = true; // Make file upload required
            } else {
                // Switching back to Existing Mode
                existingBox.style.display = 'block';
                uploadBox.style.display = 'none';
                hiddenInput.value = '1'; // Use existing
                fileInput.value = ''; // Clear file selection
                fileInput.required = false; // Not required since we have one
                document.getElementById('file-name').textContent = '';
            }
        }
    </script>
